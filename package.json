{
  "name": "centrifugo-server-sdk",
  "version": "1.0.0-l1",
  "description": "Server-side SDK for Centrifugo real-time messaging platform",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:Bubu-Labs/centrifugo-server-sdk.git"
  },
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:proto": "proto-loader-gen-types src/grpc/grpc.proto --outDir src/grpc/generated",
    "build": "bun run build:proto && bun build ./src/index.ts --outdir ./dist --format esm --target node --sourcemap",
    "build:npm": "bun run build:proto && bun build ./index.ts --outdir ./dist --format esm --target node --external:bullmq --external:ioredis --external:@grpc/grpc-js --external:axios && bun x tsc",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:verbose": "bun test --verbose",
    "test:api": "bun test tests/api.test.ts",
    "test:api:queue": "bun test tests/api.queue.test.ts",
    "test:grpc:queue": "bun test tests/grpc.queue.test.ts",
    "test:queue": "bun test tests/queue.test.ts"
  },
  "devDependencies": {
    "@bufbuild/protoc-gen-es": "^2.10.2",
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "@types/bun": "latest",
    "centrifuge": "^5.5.3",
    "protobufjs": "^8.0.0",
    "ts-proto": "^2.10.1"
  },
  "peerDependencies": {
    "typescript": "^5",
    "axios": "^1.13.2",
    "bullmq": "^5.66.4",
    "ioredis": "^5.3.2",
    "@grpc/grpc-js": "^1.14.3"
  },
  "peerDependenciesMeta": {
    "bullmq": {
      "optional": true
    },
    "ioredis": {
      "optional": true
    },
    "@grpc/grpc-js": {
      "optional": true
    }
  },
  "dependencies": {}
}